{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!dist",
			"!.astro",
			"!.netlify",
			"!package.json",
			"!yarn.lock",
			"!package-lock.json",
			"!public/*",
			"!src/assets",
			"!infra",
			"!reportWebVitals.ts",
			"!*.yml",
			"!*.md"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "off",
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.css.ts"],
			"linter": {
				"rules": {
					"recommended": true
				}
			}
		},
		{
			"includes": ["**/*.ts", "**/*.tsx"],
			"linter": {
				"rules": {
					"recommended": true
				}
			}
		}
	]
}
