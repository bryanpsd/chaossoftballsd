---
import { BackToTopButton } from "~/components/BackToTop";
import * as styles from "../styles/utilities/common.css";
import { BaseHead } from "./BaseHead";
import { Footer } from "./Footer";
import { Header } from "./Header";

const { title, description, lang = "en-US", noIndex } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <BaseHead title={title} description={description} noIndex={noIndex} />
  <body>
    <Header />
    <main id="main-content" role="main" class={styles.mainWrapper}>
      <slot />
    </main>
    <Footer />
    <BackToTopButton client:load />
  </body>
</html>
